{
  "$schema": "http://json-schema.org",
  "type": "object",
  "patternProperties": {
    "^.*$": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "website": {
          "type": "string",
          "format": "uri"
        },
        "avatar": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["name", "website", "avatar"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
